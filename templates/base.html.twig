<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Comble & Création{% endblock %}</title>

    {{ importmap('app') }}
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">

    <!-- Styles minimal pour logo et sidebar -->
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .layout {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 250px;            /* largeur fixe de la sidebar */
            background-color: #f5f5f5;
            padding: 20px;
            box-sizing: border-box;
        }

        .nomSite {
            text-align: center;
            margin-bottom: 30px;
        }

        .nomSite .logo {
            width: 150px;             /* largeur fixe du logo */
            height: auto;             /* garde les proportions */
            display: block;
            margin: 0 auto 10px;      /* centré + espace en dessous */
        }

        .sidebar h1 {
            font-size: 1.2rem;
            margin: 0;
        }

        .menu, .submenu {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .menu-item {
            font-weight: bold;
            margin-top: 10px;
        }

        .submenu li {
            margin-left: 15px;
            margin-top: 5px;
        }

        .content {
            flex: 1;
            padding: 20px;
            background-color: #fff;
        }

        .btn-logout {
            margin-top: 20px;
            padding: 8px 12px;
            cursor: pointer;
        }
    </style>
</head>

<body>

<div class="layout">

    <!-- SIDEBAR -->
    <aside class="sidebar">

        <div class="nomSite">
            <img src="{{ asset('images/logo.png') }}" alt="Logo" class="logo">
            <h1>Comble & Création</h1>
        </div>

        <nav>
            <ul class="menu">

                <li class="menu-item">Chantiers</li>
                <ul class="submenu">
                    <li><a href="{{ path('app_chantier_index') }}">Liste des chantiers</a></li>
                    <li><a href="{{ path('app_chantier_new') }}">Ajouter un chantier</a></li>
                </ul>

                <li class="menu-item">Postes</li>
                <ul class="submenu">
                    <li><a href="{{ path('app_poste_index') }}">Liste des postes</a></li>
                    <li><a href="{{ path('app_poste_new') }}">Ajouter un poste</a></li>
                </ul>

                <li class="menu-item">Equipes</li>
                <ul class="submenu">
                    <li><a href="{{ path('app_equipe_index') }}">Liste des equipes</a></li>
                </ul>

            </ul>
        </nav>

        {% if app.user %}
            <form method="post" action="{{ path('app_logout') }}">
                <button type="submit" class="btn-logout">
                    Se déconnecter
                </button>
            </form>
        {% endif %}

    </aside>

    <!-- CONTENU -->
    <main class="content">
        <div class="dashboard">
            {% block body %}{% endblock %}
        </div>
    </main>

</div>

</body>
</html>
