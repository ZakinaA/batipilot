{% extends 'base.html.twig' %}

{% block title %}Formats d'étapes{% endblock %}

{% block body %}
<div class="dashboard">
    <div class="top-bar">
        <h1>Formats d'étapes</h1>
        <a href="{{ path('app_etape_format_new') }}" class="btn-add">
            + Nouvelle étape de format
        </a>
    </div>

    <div class="white-table">
        <div class="white-table-header">
            <div>Libellé</div>
            <div>Actions</div>
        </div>

        {% for etape_format in etape_formats %}
            <div class="white-table-row">
                <div class="white-table-cell">
                    {{ etape_format.libelle }}
                </div>
                <div class="white-table-cell actions">
                    <a href="{{ path('app_etape_format_edit', {id: etape_format.id}) }}" class="btn-action">
                        Modifier
                    </a>
                </div>
            </div>
        {% else %}
            <div class="white-table-empty">
                Aucun format d’étape enregistré.
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
